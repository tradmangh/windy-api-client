{
  "name": "@tradmangh/windy-api-client",
  "version": "0.1.0",
  "description": "TypeScript client for Windy.com Point Forecast API",
  "author": "Thomas Radman",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "windy",
    "windy.com",
    "weather",
    "forecast",
    "api",
    "wind",
    "kitesurfing",
    "windsurfing",
    "sailing",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tradmangh/windy-api-client.git"
  },
  "bugs": {
    "url": "https://github.com/tradmangh/windy-api-client/issues"
  },
  "homepage": "https://github.com/tradmangh/windy-api-client#readme",
  "scripts": {
    "build": "tsup",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.56.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
